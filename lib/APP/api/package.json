{
   "name": "apollo",
   "version": "0.0.1",
   "description": "Apollo server developed in TypeScript.",
   "license": "ISC",
   "author": "Munib Sonny Rahman",
   "private": true,
   "devDependencies": {
      "@types/node": "^14.14.37",
      "@types/pg": "^7.14.11",
      "@types/uuid": "^8.3.0",
      "cross-env": "^7.0.3",
      "mikro-orm": "^4.5.3",
      "ts-node": "9.1.1",
      "ts-node-dev": "^1.1.6",
      "typescript": "4.2.4"
   },
   "dependencies": {
      "@mikro-orm/core": "^4.5.3",
      "@mikro-orm/postgresql": "^4.5.3",
      "apollo-server-express": "^2.22.2",
      "class-validator": "^0.13.1",
      "cors": "^2.8.5",
      "dotenv": "^8.2.0",
      "graphql": "^15.5.0",
      "graphql-tools": "^7.0.4",
      "jwt-decode": "^3.1.2",
      "pg": "^8.6.0",
      "reflect-metadata": "^0.1.13",
      "type-graphql": "^1.1.1",
      "uuid": "^8.3.2"
   },
   "mikro-orm": {
      "useTsNode": true
   },
   "scripts": {
      "prod": "cross-env NODE_ENV=production ts-node-dev --respawn --no-notify src/server.ts",
      "dev": "cross-env NODE_ENV=development ts-node-dev --debug --exit-child src/server.ts",
      "test": "cross-env NODE_ENV=test jest --watch",
      "migrate": "npx mikro-orm migration:create",
      "migrate-up": "npx mikro-orm migration:up",
      "migrate-down": "npx mikro-orm migration:down"
   }
}
