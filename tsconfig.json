{
  "compilerOptions": {
    "target":"ES2018",
    "module": "commonjs",
    "lib": ["es2018"],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "noEmit": true,
    "typeRoots": ["./node_modules/@types"],
    "outDir": "build/dist" // For some reason this isn't working, I can't see anything in the build directory.
  },
  "exclude": [
    "cdk.out",
    "./lib/App/**/", // Ignore the api and web app
    "build"
  ]
}
